    <script>
        // –ë–∞–∑–æ–≤–∞—è –ª–æ–≥–∏–∫–∞ –¥–ª—è –ø—Ä–∏–º–µ—Ä–∞
        function generateCode() {
            const chars = 'ABCDEF0123456789';
            let code = '';
            for (let i = 0; i < 12; i++) {
                code += chars.charAt(Math.floor(Math.random() * chars.length));
                if (i === 3 || i === 7) code += '-';
            }
            document.getElementById('generated-code').textContent = code;
        }

        // –ú–æ–∂–Ω–æ –¥–æ–±–∞–≤–∏—Ç—å —Ä–µ–∞–ª—å–Ω—ã–π —Ä–∞—Å—á–µ—Ç –∫—É—Ä—Å–∞ —á–µ—Ä–µ–∑ API
        document.getElementById('currency-from').addEventListener('change', updateRate);
        document.getElementById('currency-to').addEventListener('change', updateRate);

        function updateRate() {
            const from = document.getElementById('currency-from').value;
            const to = document.getElementById('currency-to').value;
            // –ó–¥–µ—Å—å –º–æ–∂–Ω–æ –ø–æ–¥–∫–ª—é—á–∏—Ç—å API –∫—É—Ä—Å–æ–≤
            document.getElementById('rate').textContent = `1 ${to} = ${(Math.random() * 10 + 80).toFixed(2)} ${from}`;
        }
    </script>
